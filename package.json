{
  "name": "widescreen-browser",
  "version": "0.1.0",
  "description": "A widescreen-focused web browser with side-by-side tab splitting",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder && npm run fix-permissions",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux && npm run fix-permissions",
    "fix-permissions": "sudo chown root:root release/linux-unpacked/chrome-sandbox && sudo chmod 4755 release/linux-unpacked/chrome-sandbox",
    "preview": "vite preview",
    "electron:dev": "node scripts/dev-runner.js",
    "electron:build": "npm run build"
  },
  "keywords": [
    "electron",
    "browser",
    "split-tabs",
    "widescreen"
  ],
  "author": {
    "name": "WideScreen Browser",
    "email": "Feltz.Kenneth@gmail.com"
  },
  "homepage": "https://github.com/FeltzKen/WideScreen-Browser",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.widescreen.browser",
    "productName": "WideScreen Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network",
      "maintainer": "Feltz.Kenneth@gmail.com"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WideScreen Browser"
    }
  }
}
